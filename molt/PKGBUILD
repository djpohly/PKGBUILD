# Maintainer: jjacky
pkgname=molt
pkgver=0.0.1
pkgrel=1
pkgdesc="batch renaming utility"
arch=('i686' 'x86_64')
url="https://bitbucket.org/jjacky/molt"
license=('GPL3+')
depends=('glib2')
makedepends=('pkg-config')
source=(https://bitbucket.org/jjacky/$pkgname/get/$pkgver.tar.gz)
md5sums=('b30abd7359b53545a6013a2731d02518')

build() {
  cd "$srcdir"
  # archive is auto-generated by bitbucket, so name includes last commit
  _dir=$(ls | grep jjacky-$pkgname-)
  # moving it all in srcdir
  mv $_dir/* .
  # removing e.g. .hg_archival.txt or .hgtags
  rm -f $_dir/.hg*
  rmdir $_dir
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}

