+++ b/gtk/gtktreeview.h
@@ -538,6 +538,8 @@ GDK_AVAILABLE_IN_ALL
 void     gtk_tree_view_set_rubber_banding    (GtkTreeView          *tree_view,
 					      gboolean              enable);
 GDK_AVAILABLE_IN_3_14
