# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Brice Carpentier <brice@daknet.org>

_pkgname=cairo
pkgname=$_pkgname-jjk
pkgver=1.14.2
pkgrel=1
pkgdesc="Cairo vector graphics library"
arch=(i686 x86_64)
license=('LGPL' 'MPL')
url="http://cairographics.org/"
makedepends=('mesa' 'libgl' 'librsvg' 'gtk2' 'gtk-doc'
             'valgrind')
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman>=0.28.0' 'glib2'
         'libgl' 'sh' 'lzo')
provides=('cairo-xcb' 'cairo')
replaces=('cairo-xcb' 'cairo')
conflicts=('cairo')
options=('!libtool')
source=(http://cairographics.org/releases/$_pkgname-$pkgver.tar.xz)
sha1sums=('c8da68aa66ca0855b5d0ff552766d3e8679e1d24')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static \
      --enable-tee \
      --enable-gl \
      --enable-egl \
      --enable-svg \
      --enable-gobject #\
      #--enable-ps \
      #--enable-pdf \
      # --enable-test-surfaces

  #--disable-xlib-xcb \
      # --enable-test-surfaces \ takes ages
  #--enable-drm # breaks build

  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
