post_install() {
	sed -i -e'/^siis\.cse\.psu\.edu\//d' /etc/ca-certificates.conf
	echo siis.cse.psu.edu/siis-ca.crt >> /etc/ca-certificates.conf
	/usr/bin/update-ca-certificates --fresh
}

post_upgrade() {
	/usr/bin/update-ca-certificates
}

post_remove() {
	sed -i -e'/^siis\.cse\.psu\.edu\//d' /etc/ca-certificates.conf
	/usr/bin/update-ca-certificates --fresh
}
